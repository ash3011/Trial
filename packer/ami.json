{
    "variables": {
        "AWS_ACCESS_KEY": "",
        "AWS_SECRET_ACCESS": "",
        "aws_region": "us-east-1",
        "source_ami": "ami-0c02fb55956c7d316",
        "ssh_username": "ec2-user"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "profile": "dev",
            "access_key": "{{user `AWS_ACCESS_KEY`}}",
            "secret_key": "{{user `AWS_SECRET_ACCESS`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "t2.micro",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "{{user `ssh_username`}}",
            "ami_name": "csye6225_{{timestamp}}",
            "ami_description": "Linux 2 AMI for csye6225",
            "ami_block_device_mappings": [
                {
                    "delete_on_termination": true,
                    "device_name": "/dev/xvda",
                    "volume_size": 60,
                    "volume_type": "gp2"
                }
            ],
            "tags": {
                "Tool": "Packer",
                "Author": "user",
                "Environment": "dev"
            }
        }
    ],
    "provisioners": [
        
        {
            "type": "file",
            "source": "/home/runner/work/Trial/appDir/webservice.zip",
            "destination": "/tmp/webservice.zip"
        },
        {
            "type": "shell",
            "script": "provisioners.sh"
        }
    ]
}
